@model DataLayer.Product_Groups

@{
    ViewBag.Title = "CreateHeaderGroup";
}


@using (Ajax.BeginForm("Create", "Product_Groups", FormMethod.Post, new AjaxOptions()
{
    OnSuccess = "Success",
    UpdateTargetId = "ListGroup"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ParentId)
    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger font_family_pe" })
        <div class="form-group">
            @Html.LabelFor(model => model.GroupTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GroupTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupTitle, "", new { @class = "text-danger font_family_pe" })
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" title="ثبت گروه" class="btn btn-success">
                    ثبت گروه
                </button>
            </div>
        </div>
    </div>
}