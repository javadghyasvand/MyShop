@model DataLayer.Users

@{
    ViewBag.Title = "CreateUser";
}

<h2 class="font_family_pe" >افزودن کاربر</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoleId,  htmlAttributes: new { @class = "control-label col-md-2 font_family_pe" })
            <div class="col-md-10">
                @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control font_family_pe" })
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger font_family_pe" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 font_family_pe" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control " } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger font_family_pe" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 font_family_pe" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger font_family_pe" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 font_family_pe" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger font_family_pe" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2 font_family_pe" })
            <div class="col-md-2">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive ,new { @class = "control-label col-md-1" })
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger font_family_pe" })
                </div>
            </div>
        </div>
        <hr/>
        <div class="form-group" >
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" title="ذخیره" class="btn btn-success"><i class="fa fa-save fa-2x"></i></button>
                <a href="@Url.Action("Index")" class="btn btn-info" title="بازگشت" ><i class="fa fa-arrow-circle-left fa-2x"></i></a>
            </div>
        </div>
    </div>
}
