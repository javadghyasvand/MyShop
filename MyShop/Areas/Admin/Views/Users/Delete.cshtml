
@using MyShop.Utilities
@model DataLayer.Users

@{
    ViewBag.Title = "DeleteUser";
}

<h2 class="font_family_pe">حذف کابر</h2>
<hr/>
<h3 class="font_family_pe text-danger">آیا از حذف کاربر <strong>@Model.UserName</strong> مطمئن هستید؟</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="font_family_pe">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt style="margin-top: 25px !important; font-size: 15px!important;" class="font_family_pe Margin-control">
            @Html.DisplayNameFor(model => model.Roles.RoleTitle)
        </dt>
        <dd style="margin-top: 25px !important; font-size: 15px!important;" class="font_family_pe">
            @Html.DisplayFor(model => model.Roles.RoleTitle)
        </dd>
        <dt style="margin-top: 25px !important; font-size: 15px!important;" class="font_family_pe">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd style="margin-top: 25px !important; font-size: 15px!important;">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt style="margin-top: 25px !important; font-size: 15px!important;" class="font_family_pe">
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>
        <dd style="margin-top: 25px !important; font-size: 15px!important;">
            @Model.RegisterDate.ToShamsi()
        </dd>
        <dt style="margin-top: 25px !important; font-size: 15px!important;" class="font_family_pe">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd style="margin-top: 25px !important; font-size: 15px!important;">
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        @Html.HiddenFor(model => model.Password)
        @Html.HiddenFor(model => model.ActiveCode)
        @Html.HiddenFor(model => model.Users1.UserName)
        @Html.HiddenFor(model => model.Users2.UserName)

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" title="حذف" class="btn btn-danger"><i class="fa fa-trash-o fa-2x"></i></button>
                <a href="@Url.Action("Index")" class="btn btn-info" title="بازگشت"><i class="fa fa-arrow-circle-left fa-2x"></i></a>
            </div>
        </div>

    }
</div>