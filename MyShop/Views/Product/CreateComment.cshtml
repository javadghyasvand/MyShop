@model DataLayer.Product_Comment

@using (Ajax.BeginForm("CreateComment","Product",FormMethod.Post,new AjaxOptions()
{
    OnSuccess = "SuccessComment",
    UpdateTargetId = "ListComment"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.ProductID)
    @Html.HiddenFor(model => model.ParnetID)
    <div class="col-md-5">
        <div class="form-group">
            @Html.TextBoxFor(model=>model.Name ,new { @class = "form-control" ,placeholder="نام"})
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "ایمیل" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-7">
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", placeholder = "متن نظر" })
        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
        <button type="submit" class="btn btn-success">ثبت دیدگاه ارزشمند شما</button>
    </div>
    <div class="clearfix"></div>
}
